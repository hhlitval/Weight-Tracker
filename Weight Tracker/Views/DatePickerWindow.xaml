<Window x:Class="Weight_Tracker.DatePickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Weight_Tracker"
        mc:Ignorable="d"
        Title="DatePickerWindow" Height="450" Width="800"
        x:Name="datePickerWindow" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="From Date:"/>
        <TextBlock Grid.Column="1" Text="To Date:"/>
        <DatePicker Grid.Column="0" Grid.Row="1" DisplayDate="3/1/2010" DisplayDateStart="3/1/2010" DisplayDateEnd="3/31/2010" SelectedDate="{Binding DisplayDate}"/>
        <DatePicker Grid.Column="1" Grid.Row="1" />
        <Button Grid.Column="0" Grid.Row="2" Content="Cancel"/>
        <Button Grid.Column="1" Grid.Row="2" Content="Apply"/>
    </Grid>
</Window>
